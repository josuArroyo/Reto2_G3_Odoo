<odoo>
    <data>
        <record model="ir.ui.view" id="grupo3c.event_list">
            <field name="name">grupo3c event</field>
            <field name="model">grupo3c.event</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id"/>
                    <field name="date"/>
                    <field name="description"/>
                    <field name="eventType"/>
                    <field name="award"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="grupo3c.event_form">
            <field name="name">grupo3c event form</field>
            <field name="model">grupo3c.event</field>
            <field name="arch" type="xml">
                <form string="event form">
                    <group colspan="4">
                        <group colspan="2" col="2">
                            <field name="id"/>
                            <field name="description"/>
                            <field name="eventType"/>
                        </group>
                        <group colspan="2" col="2">
                            <field name="date"/>
                            <field name="award"/>
                        </group>    
                    </group>
                </form>
            </field>
        </record> 
        
        <record model="ir.ui.view" id="grupo3c.event_search">
            <field name="name">grupo3c event search</field>
            <field name="model">grupo3c.event</field>
            <field name="arch" type="xml">
                <search>
                    <field name="id"/>
                    <field name="eventType"/>
                </search>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="grupo3c.action_window2">
            <field name="name">grupo3c events</field>
            <field name="res_model">grupo3c.event</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem name="FUERZAG3_EventManagement" id="grupo3c.menu_2_list" parent="grupo3c.menu_1" action="grupo3c.action_window2"/>
    </data>
</odoo>
